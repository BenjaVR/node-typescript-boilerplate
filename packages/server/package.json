{
  "name": "@my-app/server",
  "description": "Server with API for my app.",
  "private": true,
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node build/index.js",
    "prestart": "npm run build",
    "build": "tsc",
    "prebuild": "rimraf build",
    "lint": "eslint src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit",
    "test": "jest"
  },
  "dependencies": {
    "@my-app/lib": "latest",
    "fastify": "3.25.3",
    "fastify-autoload": "3.10.0",
    "fastify-plugin": "3.0.0"
  },
  "devDependencies": {
    "@types/jest": "27.4.0",
    "@types/node": "17.0.8",
    "eslint": "8.6.0",
    "jest": "27.4.7",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "ts-jest": "27.1.2",
    "ts-node-dev": "1.1.8",
    "typescript": "4.5.4"
  }
}
